{
  "name": "twitch-pip",
  "version": "1.0.0",
  "description": "A simple way to watch Twitch in Picture-in-Picture mode",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "package-win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --icon=screen65 --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Twitch PIP\"",
    "package-linux" : "electron-packager . --overwrite --platform=linux --arch=x64 --icon=screen.ico --prune=true --out=release-builds"
  },
  "author": "crisfast",
  "license": "MIT",
  "devDependencies": {
    "electron-packager": "^8.5.1",
    "electron": "^9.1.1"
  }
}
